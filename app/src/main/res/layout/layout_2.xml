<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".StartActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView2"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="@drawable/fon"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5.5">

            <TextView
                    android:text="@string/layout_2text"
                    android:id="@+id/textView2"
                    style="@style/TextViewHead"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentTop="true"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/paddingtext"
                android:paddingRight="@dimen/paddingtext"
                android:layout_weight="2">

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:text=""
                    android:ems="10"
                    android:id="@+id/editText"
                    android:background="@android:color/background_light"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/textsize"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding">

            <Button
                    android:text="@string/layout_btnofert"
                    android:id="@+id/btnofert"
                    android:layout_marginTop="25dp"
                    android:layout_alignParentTop="true"
                    style="@style/bazebutton"
                    android:background="@drawable/ic_btn2"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
